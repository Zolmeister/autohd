{
  "manifest_version": 2,

  "name": "Auto Load HD for YouTube",
  "short_name": "yt-autohd",

  "description": "Automatically loads HD version of YouTube videos.\nSource at:\nhttps://github.com/peter-lang/autohd",
  "version": "1.2.1",
  "minimum_chrome_version": "22",

  "content_scripts": [{
    "js": ["contentscript.js"],
    "matches": ["*://www.youtube.com/*"]
  }],
  "options_page": "options.html",
  "web_accessible_resources": ["script.js"],

  "background": {
    "scripts":["background.js"],
    "persistent": false
  },

  "permissions": [
    "webRequest",
    "*://www.youtube.com/*",
    "webRequestBlocking",
    "storage"
  ]
}