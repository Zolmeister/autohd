{
  "manifest_version": 2,

  "name": "Auto HD for YouTube (OpenSource)",
  "short_name": "yt-autohd",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "description": "Automatically loads HD (or any) quality and disable user's featured video autostart. Source: https://github.com/peter-lang/autohd",
  "version": "1.2.9",
  "minimum_chrome_version": "22",

  "content_scripts": [{
    "js": ["contentscript.js"],
    "matches": ["*://www.youtube.com/*", "*://music.youtube.com/*"],
    "run_at": "document_start"
  }],
  "options_page": "options.html",
  "web_accessible_resources": ["script.js", "script_music.js"],

  "permissions": [
    "webRequest",
    "*://www.youtube.com/*",
    "*://music.youtube.com/*",
    "storage"
  ]
}
